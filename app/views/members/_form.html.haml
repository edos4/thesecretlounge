= form_with(model: member, data: { controller: 'validation' }) do |form|
  .form-group
    = form.label :name
    = form.text_field :name, class: 'form-control'
  .form-group
    = form.label :email
    = form.text_field :email, class: 'form-control'
  .form-group
    = form.label :contact_number
    = form.text_field :contact_number, class: 'form-control'
  .form-group
    = form.label :address
    = form.text_field :address, class: 'form-control'
  .form-group
    = form.label :branch
    = form.select :branch_id, options_for_select([[]]+Branch.all.collect{ |u| [u.name, u.id]}, :selected => @member.branch_id),{}, class: 'form-control js-example-theme-single'
  .form-group
    = form.label :membership_card_number
    = form.text_field :membership_card_number, class: 'form-control'
  .form-group
    = form.label :membership_date
    = form.date_field :membership_date, value: (@member.membership_date), class: 'form-control datepicker'
  .form-group
    = form.label :expiry_date
    = form.date_field :expiry_date, value: (@member.expiry_date), class: 'form-control datepicker'
  .form-group
    = form.label :beauty_bank
    = form.number_field :beauty_bank, class: 'form-control'
  .form-group
    = form.label :loyalty_points
    = form.number_field :loyalty_points, class: 'form-control'
  .card-footer.pl-0
    = form.submit class: 'btn btn-primary'

:javascript
  $( function() {
    $( ".datepicker" ).datepicker();
  } );